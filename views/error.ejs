<div class="error-page">
    <div class="error-content">
        <h1 class="error-code">
            <%= statusCode %>
        </h1>
        <h2 class="error-title">
            <% if (statusCode===404) { %>
                Page Not Found
                <% } else if (statusCode===403) { %>
                    Access Denied
                    <% } else if (statusCode===401) { %>
                        Unauthorized
                        <% } else { %>
                            Something Went Wrong
                            <% } %>
        </h2>
        <p class="error-message">
            <%= message %>
        </p>
        <a href="/" class="btn btn-primary">Go Home</a>
    </div>
</div>